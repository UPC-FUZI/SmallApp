<!--pages/me/me.wxml-->
<view class="container">
  <!-- logo -->
  <view class="logo_view">
    <image class="logo_pic" src="{{logo}}" mode="aspectFit"/>
  </view>
  <!-- 联系方式 -->
  <view class="contact">
    <view class="contact_info" bindtap="callTelephone">
      <text>TEL:18811530776(点击拨打)</text>
    </view>
  </view>
  <!-- 地理位置 -->
  <view class="location">
    <view class="location_info">
    <text>地址：潍坊广潍二手车交易市场-君博名车</text>
    </view>
    <map id="map" longitude="119.129580" latitude="36.629270" scale="16" markers="{{markers}}" bindmarkertap="markertap"show-location style="width: 100%; height: 150px;"></map>
  </view>
  <!-- 微信、名片 -->
  <view class="wx">
    <view class="wx_pic">
      <image style="width:100%;height:130px;" mode="aspectFit" src="../../images/wx.png"/>
    </view>
    <view class="wx_info">
      <text>保存图片 & 扫描加好友</text>
    </view>
  </view>
</view>